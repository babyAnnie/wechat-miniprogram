/* pages/cloud/cloud.wxss */
.cloud-wrapper{
  padding: 8rpx;
}

.label {
  font-weight: bold;
  font-size: 32rpx;
}

.button-wrapper {
  margin: 6rpx 0;
}

.button {
  font-size: 28rpx;
  border: 1px solid #307fff;
  color: #fff;
  background-color: #307fff;
  margin-right: 6rpx;
  display: inline-block;
}

.img {
  width: 100%;
  height: 500rpx;
  box-shadow: 0 0 4rpx #ccc;
}

.iamges-outside {
  padding: 8rpx;
}

.images-wrapper {
  position: relative;
  width: 100%;
}

.download {
  width: 96rpx;
  height: 32rpx;
  padding: 0;
  margin: 0;
  box-sizing: border-box;
  background-color: #307fff;
  font-size: 18rpx !important;
  color: #fff;
  letter-spacing: 4rpx;
  /* border-radius: 50%; */
  position: absolute;
  z-index: 999;
  bottom: 22rpx;
  right: 12rpx;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  opacity: .9;
  filter: grayscale(.5);
}