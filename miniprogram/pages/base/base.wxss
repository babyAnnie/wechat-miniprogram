/* pages/base/base.wxss */
@import '../../style/common.wxss';

.base-wrapper {
  margin: 8rpx;
}

.box {
  color: #fff;
  background-color: #307fff;
  border-radius: 5rpx;
  padding: 8rpx;
  margin: 8rpx 0;
}

.img {
  display: block;
  width: 100%;
  height: 500rpx;
  box-sizing: border-box;
  border: 1px solid #cccccc99;
}

.banner {
  background-color: #cc7;
  color: #fff;
  padding: 8rpx;
  margin: 8rpx 0;
  border-radius: 5rpx;
}

.banner-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #307fff;
}